# Environment Configuration Example
# Copy this file to .env and update values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGO_URI=mongodb://localhost:27017/housnkuh
MONGO_TEST_URI=mongodb://localhost:27017/housnkuh_test

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d
ADMIN_SETUP_KEY=your-admin-setup-key-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Production Email Settings
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=noreply@housnkuh.de
EMAIL_PASS=your-email-password-here
EMAIL_FROM=noreply@housnkuh.de
ADMIN_EMAIL=admin@housnkuh.de

# Development Email Settings (Mailpit)
# Uncomment these for local development with Mailpit
# EMAIL_HOST=localhost
# EMAIL_PORT=1025
# EMAIL_USER=test
# EMAIL_PASS=test
# EMAIL_FROM=dev@housnkuh.local
# EMAIL_SECURE=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Redis (if used for caching/sessions)
REDIS_URL=redis://localhost:6379

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Maps & Location Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Set to true to enable additional development features
DEBUG_MODE=false

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key-here
SESSION_MAX_AGE=86400000

# =============================================================================
# SECURITY HEADERS
# =============================================================================
# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Application Performance Monitoring
APM_SERVICE_NAME=housnkuh-api
APM_SERVER_URL=http://localhost:8200

# Error Reporting
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Database backup configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# NOTES
# =============================================================================
# - Never commit this file with real credentials to version control
# - Use strong, unique passwords for all services
# - Rotate secrets regularly
# - Use environment-specific values for production
# - Consider using a secret management service for production