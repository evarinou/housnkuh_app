  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.0.12",
    "concurrently": "^8.2.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@playwright/test": "^1.53.2",
    "cheerio": "^1.1.0",
    "node-fetch": "^2.7.0"
  }
}
