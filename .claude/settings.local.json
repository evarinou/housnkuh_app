  "enableAllProjectMcpServers": false,
  "hooks": {
    "beforeFileEdit": "echo '📂 Editing: $FILE' && head -20 \"$FILE\" 2>/dev/null | grep -E '@file|@purpose' || echo '⚠️  Missing file documentation'",
    "afterFileEdit": "cd \"$PROJECT_DIR\" && npx tsc --noEmit --skipLibCheck \"$FILE\" 2>&1 | grep -E 'error|warning' || echo '✅ TypeScript OK' && echo \"$FILE\" | grep -E '(component|service|model|controller)' && echo '📐 Remember: Update ARCHITECTURE.md if needed'",
    "afterFileCreate": "echo '📝 Reminder: Add file header documentation with @file and @purpose tags!'",
    "beforeCommand": "echo '🚀 Running: $COMMAND'",
    "afterCommand": "[ \"$COMMAND\" = *\"test\"* ] && echo '🧪 Tests completed' || true"
  }
}